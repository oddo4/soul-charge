<Page x:Class="formular.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:formular.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Label Content="{Binding Firstname}" Margin="5,5" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Nová objednávka" Width="110" Height="20" Margin="0,5" Command="{Binding ShowDataCommand}" CommandParameter="0"/>
            <!--
            <Button Content="Přidat data" Width="80" Height="20" Margin="0,5" Command="{Binding AddDataCommand}" CommandParameter="1"/>
            -->
            <Button Content="Účet" Width="50" Height="20" Margin="0,5" Command="{Binding DeleteDataCommand}" CommandParameter="2"/>
        </StackPanel>
    </Grid>
</Page>
