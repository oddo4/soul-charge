<Page x:Class="test_181115.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:test_181115"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPage">

    <Grid>
        <Button x:Name="BackButton" Content="Zpět" Width="60" Click="BackButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Přidat osobu" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5">
                <Label Content="Jméno: " Width="60"/>
                <TextBox x:Name="NameTxtBox" Width="100"/>
            </StackPanel>
            <Button x:Name="SendButton" Content="Odeslat" Width="60" Click="SendButton_Click" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Page>
