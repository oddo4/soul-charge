<Window x:Class="test_181115.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test_181115"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBox x:Name="TextBoxQuery" Width="100" Margin="0,5"/>
        <Button Content="Odeslat" Width="100" Margin="0,5" Click="SendClick"/>
        <ListView x:Name="ListViewData" HorizontalAlignment="Center" Height="200" VerticalAlignment="Center" Width="200" Margin="0,5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}"/>
                    <GridViewColumn Header="Jméno" DisplayMemberBinding="{Binding Name}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="LabelInfo" Width="200"/>
    </StackPanel>
</Window>
